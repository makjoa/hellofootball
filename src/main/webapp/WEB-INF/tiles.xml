<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE tiles-definitions PUBLIC  
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
<tiles-definitions>  
    <definition name="base.definition" template="/WEB-INF/jsp/include/layout.jsp">  
        <put-attribute name="title" value="" />  
        <put-attribute name="header" value="/WEB-INF/tags/header.jsp" />           
        <put-attribute name="footer" value="/WEB-INF/tags/footer.jsp" />  
    </definition>  
  
    <definition name="index" extends="base.definition">  
        <put-attribute name="title" value="Hello FootBall" />  
        <put-attribute name="content" value="/WEB-INF/jsp/index.jsp" />  
    </definition>
      
    <definition name="*" extends="base.definition">  
        <put-attribute name="title" value="Hello FootBall" />  
        <put-attribute name="content" value="/WEB-INF/jsp/{1}.jsp" />  
    </definition>
    
    <definition name="*/*" extends="base.definition">  
        <put-attribute name="title" value="Hello FootBall" />  
        <put-attribute name="content" value="/WEB-INF/jsp/{1}/{2}.jsp" />  
    </definition>
    
    <definition name="*/*/*" extends="base.definition">  
        <put-attribute name="title" value="Hello FootBall" />  
        <put-attribute name="content" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp" />  
    </definition>          
      
</tiles-definitions> 